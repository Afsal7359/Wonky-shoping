                </div>
                <div class="row">
                    <% for(let i = 0; i < OfferData.length; i++){%>
                        <% let item = OfferData[i]; %>
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="single-blog mb-30">
                            <a href="/shop">
                                <img src="<%=item.image%>" style="height: 300px;width: 250px;" alt="">
                            </a>
                            <div class="blog-title">
                                <span><%=item.heading%></span>
                                <h3><a href="/shop"><%=item.description%></a></h3>
                                <a href="/shop">read more</a>
                            </div>
                        </div>
                    </div>
                   <%}%>
                </div>	
            </div>
        </div>
        <!-- blog area end -->


   


            